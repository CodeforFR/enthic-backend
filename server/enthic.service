[Unit]
Description=Gunicorn instance to serve Enthic
After=network.target

[Service]
User=goudet
Group=goudet

WorkingDirectory=/home/goudet/Documents/dev/enthic-backend
ExecStart=/home/goudet/Documents/dev/enthic-backend/venv/bin/gunicorn --timeout 90 --workers 3 --bind unix:/var/www/enthic/enthic.sock enthic.app:application

[Install]
WantedBy=multi-user.target
